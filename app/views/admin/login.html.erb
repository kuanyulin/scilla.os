 <% if session[:user] %>
 
 <p>You're already signed in.</p>
 
 <% else %>
 
<div class='at-form'>

	<% form_tag do %>
      <fieldset>
        	<legend>請登入</legend>
			
			<div>
				<label for="name">Name</label>
				<%= text_field_tag :name, params[:name] %>
			</div>
			
			<div>
        <label for="password">Password</label><%= password_field_tag :password, params[:password] %>
      </div>
			
			<div>
				<%= submit_tag "Login" %>
			</div>
        </fieldset>
	<% end %>
</div>

<% end %>